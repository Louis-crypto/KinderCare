<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowAppontmentActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookVaccineActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/appointmentLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/anotherappintment"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment manager"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                android:padding="6dp"/>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="30dp"
    app:cardMaxElevation="20dp"
    app:cardCornerRadius="30dp"
    android:backgroundTint="@color/baby_pink">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dateSelected"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:text="time"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/timeSelected"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:text="date"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/hospitalSelected"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:text="At Gaetrude's children hospital"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmAppointmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/baby_pink"
            android:text="Confirm appointment"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>